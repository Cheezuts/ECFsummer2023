{% extends 'base.html.twig' %}

{% block title %}Inscription Controller
{% endblock %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
{% endblock %}


{% block body %}
	{% block content %}
		{% include 'navbar.html.twig' %}
		<div class="container">
			<div class="row">
				<div class="col-md-6 offset-md-3">
					<h1 class="text-center mb-4">Inscription</h1>

					{{ form_start(form, {'attr': {'class': 'form'}}) }}
					<div class="form-group">
						{{ form_label(form.email, 'Adresse e-mail') }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.email, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.password.first, 'Mot de passe') }}
						{{ form_widget(form.password.first, {'attr': {'class': 'form-control' ~ (form.password.first.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.password.first, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.password.second, 'Répéter le mot de passe') }}
						{{ form_widget(form.password.second, {'attr': {'class': 'form-control' ~ (form.password.second.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.password.second, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.nom, 'Nom') }}
						{{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.nom, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.prenom, 'Prénom') }}
						{{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.prenom, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.adresse_postale, 'Adresse postale') }}
						{{ form_widget(form.adresse_postale, {'attr': {'class': 'form-control' ~ (form.adresse_postale.vars.valid ? '' : ' is-invalid')}}) }}
						{{ form_errors(form.adresse_postale, {'attr': {'class': 'invalid-feedback'}}) }}
					</div>

					<button type="submit" class="btn btn-primary btn-block mt-4">S'inscrire</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>

		<div class="divred">div red</div>


		{% include 'footer.html.twig' %}
	{% endblock %}
{% endblock %}
